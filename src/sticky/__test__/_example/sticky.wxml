<view class="demo">
  <view class="tdesign-demo-sticky-base">
    <view class="demo-title">Sticky 吸顶</view>
    <view class="demo-desc">用于常驻页面顶部的信息、操作展示。</view>
    <t-demo title="01 类型" desc="基础吸顶" padding>
      <t-sticky class="base">
        <t-button size="large" theme="primary" class="base-button">基础吸顶</t-button>
      </t-sticky>
    </t-demo>
    <t-demo title="" desc="吸顶距离">
      <t-sticky class="offset" offset-top="{{ 40 }}">
        <t-button size="large" theme="danger" class="offset-button">吸顶距离</t-button>
      </t-sticky>
    </t-demo>
    <t-demo title="" desc="指定容器">
      <t-sticky class="container" container="{{ container }}">
        <t-button size="large" class="container-button">指定容器</t-button>
      </t-sticky>
    </t-demo>
  </view>
</view>
